{
  "name": "my-pokedex",
  "version": "0.0.0",
  "description": "Fullstack Pokedex (Angular + Node/Express)",
  "repository": "github:carlhueffmeier/my-pokedex",
  "private": true,
  "scripts": {
    "start": "run-p watch:server watch:client",
    "watch:server": "cd server && npm run watch",
    "watch:client": "cd client && npm start",
    "postinstall": "run-p install:server install:client",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install"
  },
  "keywords": [
    "pokemon"
  ],
